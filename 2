#include <iostream>

using namespace std;

int main()
{
    int n, m, i, j, k, sum, p;
    cin>>n>>m;
    cout<<"k=";
    cin>>k;
    int a[n][m];
    sum=0; 
    p=1;
    setlocale(LC_ALL," ");
    for (i=1; i<n+1; i++)
    {
        for (j=1; j<m+1; j++)
        {
            cout<<"a["<<i<<"]["<<j<<"]=";
            cin>>a[i][j];
        }
    }
    for (i=1; i<n+1; i++)
    {
        for (j=1; j<m+1; j++)
        {
            if (i==k)
            {
                sum+=a[i][j];
                p*=a[i][j];
            }
        }
    }
    cout<<"сумма:"<<sum<<endl<<"произведение:"<<p;
   
    return 0;
}
